<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_check" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification has been sent to customer to verify whether this booking is completed or not.
Please wait to Verify it"
            android:textColor="@android:color/black"
            android:textSize="15dp" />


    </LinearLayout>

    <TextView
        android:id="@+id/l"
        android:layout_margin="2dp"
        android:layout_marginTop="10dp"
        android:textSize="15dp"
        android:layout_below="@id/li"
        android:text="It will take just a few minutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@+id/l"
        android:background="@drawable/btnsignin_background"
        android:text="OK"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>