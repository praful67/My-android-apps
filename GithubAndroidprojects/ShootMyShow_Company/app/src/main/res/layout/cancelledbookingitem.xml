<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:id="@+id/bookingdate"
                            android:textSize="12dp"
                            android:layout_marginVertical="5dp"
                            android:text="bookingdate" />

                        <TextView
                            android:gravity="left"
                            android:textSize="12dp"
                            android:id="@+id/bookingtime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="bookingtime" />


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/customerPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="96dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:src="@drawable/ic_terrain_black_24dp"
                            app:civ_border_color="#5e1e1e1e"
                            app:civ_border_width="1dp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:src="@drawable/cancel" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="customer Id : "
                            android:textSize="11dp" />

                        <TextView
                            android:id="@+id/customerId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="customerId"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/customerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:gravity="center"
                            android:text="customerName"
                            android:textSize="12dp" />


                        <TextView
                            android:id="@+id/customerphone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="customerPhone"
                            android:textSize="12dp" />

                        <RelativeLayout
                            android:id="@+id/rlv1"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/rectangle" >
                            <TextView
                                android:id="@+id/eventtype"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/black"
                                android:gravity="center"
                                android:text="Event"
                                android:textColor="@android:color/holo_blue_dark"
                                android:textSize="15dp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlv2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_below="@+id/rlv1"
                            android:background="@drawable/triangle"
                            android:rotation="180" />

                    </LinearLayout>
                </LinearLayout>




            </LinearLayout>
            <LinearLayout
                android:id="@+id/t"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/l1"
                android:orientation="horizontal"
                android:weightSum="2">



                <ImageView
                    android:id="@+id/detailsbtn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_event_note_black_24dp" />



                <ImageView
                    android:id="@+id/cancelAdvancebooking"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_clear_black_24dp" />



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@android:color/black" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

