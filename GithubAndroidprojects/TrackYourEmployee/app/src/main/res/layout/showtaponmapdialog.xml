<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">


    <LinearLayout
        android:id="@+id/li"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:text="TAP ON MAP"
            android:textColor="@android:color/black"
            android:textSize="20dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/li"
            android:layout_margin="2dp"
            android:layout_marginTop="10dp"
            android:text="Please tap the location on map where you want to call driver and set it as your pick up Address. You can even use the  search bar if the location is far and then tap . "
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsignin_background"
            android:text="OK"
            android:textColor="@android:color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/black"></View>
    </LinearLayout>


</RelativeLayout>