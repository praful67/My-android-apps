<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="fadein">

        <item name="android:windowEnterAnimation">@anim/fade_in</item>
<!--
        <item name="android:windowExitAnimation">@anim/slide_right_to_left</item>
-->
    </style>

    <style name="Dialogslide1">

        <item name="android:windowEnterAnimation">@anim/slide_left_to_right</item>
        <item name="android:windowExitAnimation">@anim/slide_right_to_left</item>
    </style>
   <style name="Dialogslide2">

        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="Dialogscale">

        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="Dialogscaleslow">

        <item name="android:windowEnterAnimation">@anim/scale_in_slow</item>
        <item name="android:windowExitAnimation">@anim/scale_out_slow</item>
    </style>

    <style name="AppTheme.Customtheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="AppTheme.CustomTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
