<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    tools:showIn="@layout/app_bar_home">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home" />

    <android.support.v7.widget.CardView
        android:id="@+id/C"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:cardElevation="10dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/booklater"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/btnsignin_background"
                android:text="ADVANCE BOOKING"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/howtouse"
                android:layout_marginHorizontal="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btnsignin_background"
                android:text="HOW TO USE"
                android:layout_marginBottom="3dp"
                android:textColor="@android:color/white" />


        </LinearLayout>

    </android.support.v7.widget.CardView>
<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="15dp"
    android:layout_height="match_parent">
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/currentlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_action_current" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/idavailablecompany"
        android:layout_width="wrap_content"
        android:layout_marginVertical="80dp"
        android:layout_height="wrap_content"
       android:clickable="true"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/group" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/refresh"
        android:layout_marginBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:clickable="true"
        app:rippleColor="@android:color/white"
        app:srcCompat="@drawable/ic_loop" />

</LinearLayout>
</RelativeLayout>

