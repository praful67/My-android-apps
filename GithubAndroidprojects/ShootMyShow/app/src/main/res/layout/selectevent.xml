<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black"
                android:gravity="center"
                android:paddingVertical="5dp"
                android:text="What type of event Booking is this ? "
                android:textColor="@android:color/white"
                android:textSize="20dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" * can scroll down"
                android:textColor="@android:color/black" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/ad_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:adSize="BANNER"
                app:adUnitId="@string/ad_banner" />

            <com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper
                android:id="@+id/VF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/functioneventlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/rlv1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rectangle"
                                android:gravity="left">

                                <TextView
                                    android:id="@+id/currentlocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@android:color/black"
                                    android:gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="FUNCTION EVENT"
                                    android:textColor="@android:color/holo_blue_dark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper
                                android:id="@+id/VFF"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/F1"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/f1" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/F2"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/f2" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/F3"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/f3" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/F4"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p1h" />
                            </com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="All Function events like Marriage , Wedding , Dinner , Sangeet ...etc"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/partyeventlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rectangle"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@android:color/black"
                                    android:gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="PARTY EVENT"
                                    android:textColor="@android:color/holo_blue_dark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper
                                android:id="@+id/VFP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/p1"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/b1" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/p2"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p2" />

                            </com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="All party events like Birthday party , Casual party ..etc"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp">

                    <LinearLayout
                        android:id="@+id/photoshooteventlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="left"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/rectangle"
                                android:gravity="left">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:background="@android:color/black"
                                    android:gravity="center"
                                    android:paddingHorizontal="2dp"
                                    android:text="PHOTOSHOOTING"
                                    android:textColor="@android:color/holo_blue_dark"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                      <!--      <RelativeLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@+id/rlv1"
                                android:layout_gravity="left"
                                android:background="@drawable/triangle"
                                android:rotation="180" />
               -->         </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper
                                android:id="@+id/VFPH"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp">

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/PH3"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p2h1" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/PH4"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p5h" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/PH1"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p4h" />

                                <com.flaviofaria.kenburnsview.KenBurnsView
                                    android:id="@+id/PH2"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/p3h" />

                            </com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Lets do some photoshooting to get cool pics"
                            android:textColor="@android:color/black"
                            android:textSize="15dp" />


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </com.Shootmyshow.praful.shootmyshow.GabrielleViewFlipper>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/previousVF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="previous"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/nextVF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnsignin_background"
                    android:gravity="center"
                    android:text="next"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="YOUR EVENT : "
                    android:textColor="@android:color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/myevent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Event"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btnsignin_background"
                    android:gravity="center"
                    android:text="CONTINUE"
                    android:textColor="@android:color/white" />

            </LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/btnsignin_background"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@android:color/holo_red_dark" />


            <com.google.android.gms.ads.AdView
                android:id="@+id/ad_banner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                app:adSize="BANNER"
                app:adUnitId="@string/ad_banner" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>